<Grid x:Class="Meter.View.Templates.IncomeStatementColumnTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Meter.View.Templates"
             mc:Ignorable="d">
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="85"/>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="90"/>
        <ColumnDefinition Width="60"/>
    </Grid.ColumnDefinitions>

    <Label Content="Tenant" Style="{StaticResource ColLabel}"/>
    <Label Grid.Column="1" Content="Invoice Date" Style="{StaticResource ColLabel}"/>
    <Label Grid.Column="2" Content="To be paid on" Style="{StaticResource ColLabel}"/>
    <Label Grid.Column="3" Content="Amount" Style="{StaticResource ColLabel}"/>
</Grid>
