<Grid x:Class="Meter.View.Templates.CityColumnTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Meter.View.Templates"
             mc:Ignorable="d" >
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="150"/>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Label Content="City" Style="{StaticResource ColLabel}"/>
    <Label Content="COMMANDS" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource ColLabel}"/>

</Grid>
