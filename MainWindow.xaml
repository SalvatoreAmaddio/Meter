<Window x:Class="Testing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testing"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="450"
        x:Name="Page"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Page_Loaded"
        Icon="/Img/logo.png"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Image Source="/Img/logo.png"/>
        <Label Grid.Row="1" Content="Loading" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ProgressBar Grid.Row="2" IsIndeterminate="True"/>
        <Label Grid.Row="3" Content="Developed By Salvatore Amaddio R." HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
